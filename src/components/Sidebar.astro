<style>
  /* Left Sidebar */
  .sidebar {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    color: white;
    padding: 40px 30px;
    position: relative;
    order: 1;
  }

  .profile-section {
    text-align: center;
    margin-bottom: 40px;
  }

  .photo-placeholder {
    width: 180px;
    height: 200px;
    border-radius: 15px;
    background: linear-gradient(135deg, #3498db, #2980b9);
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    border: 3px solid rgba(255,255,255,0.2);
    position: relative;
    overflow: hidden;
  }

  .photo-initials {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
  }

  .initials {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    letter-spacing: 2px;
  }

  .profile-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
  }

  .photo-placeholder:has(.profile-photo)::before {
    display: none;
  }

  .name {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 8px;
    background: linear-gradient(45deg, #fff, #ecf0f1);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .title {
    font-size: 16px;
    opacity: 0.9;
    margin-bottom: 20px;
    color: #bdc3c7;
  }

  .contact-info {
    margin-bottom: 30px;
  }

  .contact-item {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
    font-size: 14px;
  }

  .contact-icon {
    width: 20px;
    margin-right: 12px;
    opacity: 0.8;
  }

  .link {
    color: #bdc3c7;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .link:hover {
    color: #3498db;
  }

  .navigation {
    margin-bottom: 30px;
  }

  .section-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 15px;
    color: #ecf0f1;
    border-bottom: 2px solid #3498db;
    padding-bottom: 5px;
  }

  .nav-list {
    list-style: none;
  }

  .nav-item {
    margin-bottom: 8px;
  }

  .nav-link {
    color: #bdc3c7;
    text-decoration: none;
    font-size: 14px;
    padding: 8px 12px;
    border-radius: 6px;
    display: block;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    background-color: rgba(52, 152, 219, 0.2);
    color: #3498db;
  }

  .nav-link.active {
    background-color: #3498db;
    color: white;
  }

  .tech-stack {
    margin-bottom: 30px;
  }

  .tech-category {
    margin-bottom: 20px;
  }

  .tech-category h4 {
    color: #3498db;
    font-size: 14px;
    margin-bottom: 8px;
    font-weight: 600;
  }

  .tech-list {
    font-size: 13px;
    line-height: 1.5;
    color: #bdc3c7;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .sidebar {
      position: fixed;
      top: 70px; /* Below mobile header */
      left: 0;
      height: calc(100vh - 70px);
      width: 280px;
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      z-index: 1000;
      overflow-y: auto;
      order: 2;
      padding: 30px 20px;
    }

    .sidebar.mobile-open {
      transform: translateX(0);
    }
  }
</style>