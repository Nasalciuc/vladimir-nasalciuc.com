<script>
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', function() {
      const contactForm = document.getElementById('contactForm') as HTMLFormElement;
      
      contactForm?.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(contactForm);
        const data = Object.fromEntries(formData);
        
        if (!data.name || !data.email || !data.subject || !data.message) {
          alert('Please fill in all required fields.');
          return;
        }
        
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        const emailValue = data.email as string;
        if (!emailRegex.test(emailValue)) {
          alert('Please enter a valid email address.');
          return;
        }
        
        const submitBtn = contactForm.querySelector('.submit-btn') as HTMLButtonElement;
        const originalText = submitBtn?.innerHTML || '';
        
        if (submitBtn) {
          submitBtn.innerHTML = '<span class="btn-text">Sending...</span><span class="btn-icon">‚è≥</span>';
          submitBtn.disabled = true;
        }
        
        setTimeout(() => {
          const nameValue = data.name as string;
          alert(`Thank you, ${nameValue}! Your message has been sent. I'll get back to you within 24-48 hours.`);
          contactForm.reset();
          if (submitBtn) {
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
          }
        }, 2000);
      });
      
      // FAQ accordion functionality
      const faqItems = document.querySelectorAll('.faq-item h4');
      faqItems.forEach(item => {
        const element = item as HTMLElement;
        element.style.cursor = 'pointer';
        element.addEventListener('click', function() {
          const content = element.nextElementSibling as HTMLElement;
          const isVisible = content?.style.display === 'block';
          
          faqItems.forEach(otherItem => {
            const otherContent = (otherItem as HTMLElement).nextElementSibling as HTMLElement;
            if (otherContent) otherContent.style.display = 'none';
          });
          
          if (content) {
            content.style.display = isVisible ? 'none' : 'block';
          }
        });
      });
      
      document.querySelectorAll('.faq-item p').forEach(p => {
        const element = p as HTMLElement;
        element.style.display = 'none';
      });
    });
  }
</script>